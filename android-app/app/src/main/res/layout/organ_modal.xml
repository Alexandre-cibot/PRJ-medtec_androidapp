<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.03"
        android:gravity="center"
        android:text="@string/choose"
        android:textColor="@color/blue_sky"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_weight="0.02">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/choose_ulterus_image"
                android:layout_width="59dp"
                android:layout_height="43dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/choose_ulterus_text"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ulterus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/choose_thoracique_image"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/choose_thoracique_text"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/poumon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/choose_heart_image"
                android:layout_width="53dp"
                android:layout_height="42dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/choose_heart_text"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/coeur" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/button2"
        android:background="@color/eastern_dark_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_weight="0.03"
        android:text="@string/choose" />


</LinearLayout>